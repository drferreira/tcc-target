<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{creationUserView.createUser()}</from-action>
			<from-outcome>CREATION_SUCCESS</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{creationUserView.createUser()}</from-action>
			<from-outcome>CREATION_FAILURE</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginView.login()}</from-action>
			<from-outcome>LOGIN_SUCCESS</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginView.login()}</from-action>
			<from-outcome>LOGIN_FAILURE</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/home.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{headerView.projects()}</from-action>
			<from-outcome>PROJECTS_GO</from-outcome>
			<to-view-id>/projects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{headerView.projects()}</from-action>
			<from-outcome>PROJECTS_ERROR</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{headerView.home()}</from-action>
			<from-outcome>HOME</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{homeView.uploadFile()}</from-action>
			<from-outcome>GO_UPLOAD_FILE</from-outcome>
			<to-view-id>/editionNewDoc.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{homeView.uploadFile()}</from-action>
			<from-outcome>ERROR_UPLOAD_FILE</from-outcome>
			<to-view-id>/editionNewDoc.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{homeView.createNewProject()}</from-action>
			<from-outcome>GO_NEW_PROJECT_PAGE</from-outcome>
			<to-view-id>/editionNewproject.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/projects.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{headerView.projects()}</from-action>
			<from-outcome>PROJECTS_GO</from-outcome>
			<to-view-id>/projects.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{headerView.projects()}</from-action>
			<from-outcome>PROJECTS_ERROR</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{headerView.home()}</from-action>
			<from-outcome>HOME</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<from-view-id>/editionNewproject.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{projectCreationView.createNewProject()}</from-action>
			<from-outcome>CREATION_OK</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{projectCreationView.cancel()}</from-action>
			<from-outcome>CANCEL_GO_HOME</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<application>
		<resource-bundle>
			<base-name>login</base-name>
			<var>login</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>create_user</base-name>
			<var>create_user</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>basic</base-name>
			<var>basic</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>home</base-name>
			<var>home</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>creation_project</base-name>
			<var>creation_project</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>creation_doc</base-name>
			<var>creation_doc</var>
		</resource-bundle>
	</application>
</faces-config>