<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="circle-pu-test" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>br.org.circle.extractor.dao.entitys.Document</class>
		<class>br.org.circle.extractor.dao.entitys.Extraction</class>
		<class>br.org.circle.extractor.dao.entitys.ExtractionAndStopword</class>
		<class>br.org.circle.extractor.dao.entitys.Owner</class>
		<class>br.org.circle.extractor.dao.entitys.StopWord</class>

		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.show-sql" value="true" />

			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/extractor" />

		</properties>
	</persistence-unit>
</persistence>
